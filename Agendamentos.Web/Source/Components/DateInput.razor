<div>
	<span style="color:var(--yellow);">@IconContent</span>
	<input type="date"
		value="@Today"
		min="@(MinimumToday ? Today : "" )" />
	<KeyboardArrowDown />
</div>

@code {
	[Parameter]
	public RenderFragment? IconContent { get; set; }
	[Parameter]
	public bool MinimumToday { get; set; }

	private string Today = DateTime.Today.ToString("yyyy-MM-dd");
}

